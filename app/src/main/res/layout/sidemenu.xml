<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/sidemenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="50dp"
    android:divider="@null"
    android:dividerHeight="0px"
    android:footerDividersEnabled="false"
    android:background="@drawable/ic_background"
    android:headerDividersEnabled="false"
    android:choiceMode="singleChoice"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sliding_menu_btn_options"
        android:layout_centerInParent="true"
        android:padding="0dp"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sliding_menu_btn_main_menu"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/sliding_menu_btn_options"
        android:padding="0dp"
        android:layout_marginBottom="70dp"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sliding_menu_btn_help"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sliding_menu_btn_options"
        android:padding="0dp"
        android:layout_marginTop="70dp"
        />

</RelativeLayout>