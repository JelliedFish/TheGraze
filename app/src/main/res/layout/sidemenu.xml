<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/sidemenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="50dp"
    android:divider="@null"
    android:dividerHeight="0px"
    android:footerDividersEnabled="false"
    android:background="@drawable/ic_background"
    android:headerDividersEnabled="false"
    android:choiceMode="singleChoice"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageButton
        android:id="@+id/gameplay_surrender"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="0dp"
        android:layout_marginTop="30dp"
        />

    <ImageButton
        android:id="@+id/gameplay_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:padding="0dp"
        android:layout_marginBottom="70dp"
        />

    <ImageButton
        android:id="@+id/gameplay_terminate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@id/gameplay_pause"
        android:padding="0dp"
        android:layout_marginBottom="16dp"
        />

    <ImageButton
        android:id="@+id/gameplay_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@id/gameplay_terminate"
        android:padding="0dp"
        android:layout_marginBottom="16dp"
        />


</RelativeLayout>